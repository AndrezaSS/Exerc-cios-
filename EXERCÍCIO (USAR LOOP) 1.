package Exercicio4; //  EXERCÍCIO (USAR LOOP) 1 - Escrever uma classe, com um método chamado "escreveTabuada". Usar um loop for que daça a tabuada do 2

public class Tabuada {
    public void escreveTabuada(){
        int tabuada = 1;
        int resultado;

        for (int x = 0; x < 10 ; x++ ){
            resultado = x;
            System.out.println(tabuada + "x" + x + "=" + resultado);
            tabuada++;

        }


    }

    public static void main(String[] args) {
        Tabuada t = new Tabuada();
        t.escreveTabuada();


    }
}
